extends layout

block content
    w3-card-4
        .header.w3-container.w3-teal
            h1 #{contracts[0].NomeInstituicao} (#{contracts[0].NIPCInstituicao})

        .w3-container
            table.w3-table-all
                tr
                    th ID 
                    th Data de Inicio 
                    th Data de Fim
                    th Instituição 
                    th Áreas de Investigação

                each contract in contracts 
                    tr 
                        td 
                            a(href="/"+contract._id) #{contract._id}
                        td #{contract.DataInicioContrato}
                        td #{contract.DataFimContrato}
                        td 
                            a(href="/inst/"+contract.NIPCInstituicao) #{contract.NomeInstituicao}
                        td #{contract.AreasInvestigacao}

        .footer.w3-container.w3-teal
            h5 Voltar ao #[a(href="/") inicio]